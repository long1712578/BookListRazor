@page
@model BookListRazor.Pages.BookList.IndexModel
@{
}
<br/>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">
            New book
        </a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label>#</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>
                            <label>Action</label>
                        </th>
                    </tr>
                    @foreach(var book in Model.Books)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m=>book.Id)</td>
                            <td>@Html.DisplayFor(m => book.Name)</td>
                            <td>@Html.DisplayFor(m => book.Author)</td>
                            <td>@Html.DisplayFor(m => book.ISBN)</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you want Delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No book in website</p>
            }
        </form>
    </div>
</div>
